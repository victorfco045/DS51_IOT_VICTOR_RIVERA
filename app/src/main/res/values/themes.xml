<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Practica" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Practica" parent="Base.Theme.Practica" />

    <style name="buttons" parent="Theme.Practica" >
        <item name="android:textColor">@color/green</item>
        <item name="backgroundTint">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="navigateButton" parent="Theme.Practica">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="listButton" parent="Theme.Practica">
        <item name="backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="button_short" parent="Theme.Practica" >
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="cardTextTile" parent="Theme.Practica">
        <item name="android:textColor">@color/darkgrey</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="cardText" parent="Theme.Practica">
        <item name="android:textColor">@color/darkgrey</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="cardTextSmall" parent="Theme.Practica">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="label" parent="Theme.Practica">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="titulo" parent="Theme.Practica">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">42sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>